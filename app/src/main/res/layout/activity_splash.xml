<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SplashActivity">

    <ImageView
        android:id="@+id/rectangle_1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:alpha="0.95"
        android:scaleType="centerCrop"
        android:src="@drawable/splash_screen_background" />

    <View
        android:id="@+id/rectangle_5"
        android:layout_width="match_parent"
        android:layout_height="36dp"
        android:layout_marginLeft="53dp"
        android:layout_marginRight="53dp"
        android:layout_marginTop="258dp"
        android:background="@drawable/ractangle_5"
        android:alpha="0.3" />

    <TextView
        android:id="@+id/control"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/rectangle_5"
        android:text="CONTROL"
        android:layout_marginLeft="53dp"
        android:lineHeight="59dp"
        android:layout_marginTop="-11dp"
        android:textAppearance="@style/control"
        android:alpha="0.9" />

    <View
        android:id="@+id/rectangle_2"
        android:layout_width="match_parent"
        android:layout_height="36dp"
        android:layout_toRightOf="@id/control"
        android:layout_marginLeft="5dp"
        android:layout_alignParentRight="true"
        android:layout_marginRight="53dp"
        android:layout_marginTop="301dp"
        android:background="@drawable/ractangle_5"
        android:alpha="0.3" />

    <TextView
        android:id="@+id/room"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginRight="53dp"
        android:layout_below="@id/rectangle_2"
        android:text="ROOM"
        android:layout_marginTop="-11dp"
        android:textAppearance="@style/control"
        android:gravity="right|top"
        android:alpha="0.9" />

    <View
        android:id="@+id/rectangle_3"
        android:layout_width="match_parent"
        android:layout_toLeftOf="@id/room"
        android:layout_height="36dp"
        android:layout_marginRight="3dp"
        android:layout_marginLeft="53dp"
        android:layout_marginTop="345dp"
        android:background="@drawable/ractangle_5"
        android:alpha="0.3" />

    <View
        android:id="@+id/rectangle_4"
        android:layout_width="match_parent"
        android:layout_height="36dp"
        android:layout_marginLeft="53dp"
        android:layout_marginRight="53dp"
        android:layout_marginTop="389dp"
        android:background="@drawable/ractangle_5"
        android:alpha="0.3" />

</RelativeLayout>